<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/hospital_light_gray_color"/>
            <stroke android:color="@color/hospital_border_color_b"
                android:width="@dimen/hospital_insurance_bg_stroke_width"/>
            <corners android:topRightRadius="@dimen/hospital_insurance_bg_layout_radius"
                android:topLeftRadius="@dimen/hospital_insurance_bg_layout_radius"/>
        </shape>
    </item>
    <item android:gravity="bottom"
        android:height="@dimen/hospital_insurance_bg_stroke_margin"
        android:end="@dimen/hospital_insurance_bg_stroke_margin"
        android:start="@dimen/hospital_insurance_bg_stroke_margin">
        <shape android:shape="rectangle">
            <solid android:color="@color/hospital_light_gray_color"/>
        </shape>
    </item>
</layer-list>
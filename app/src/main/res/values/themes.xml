<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HumanCareKioskGuide" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- 기차 border -->
    <style name="TrainBorderStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/train_border_8</item>
    </style>

    <!-- 기차 열차조회 cell item -->
    <style name="TrainSearchViewItem" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">2dp</item>
        <item name="android:paddingVertical">4dp</item>
    </style>

    <!-- 기차 탭 타이틀 -->
    <style name="TrainTabTitleText" parent="Widget.AppCompat.TextView" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/train_font_color_main</item>
        <item name="android:textSize">@dimen/train_font_size_large2</item>
    </style>

    <!-- 기차 탭 bottom bar -->
    <style name="TrainTabTitleBottomView" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/train_tab_bottom_height</item>
        <item name="android:background">@color/train_bg_color3</item>
    </style>

    <!-- 기차 카드결제 아이템뷰 -->
    <style name="TrainPaymentOfCard_ItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">6dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 기차 카드결제 아이템 타이틀 textview -->
    <style name="TrainPaymentOfCard_TitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/train_font_size_small</item>
    </style>

    <style name="TrainEditBox" parent="Widget.AppCompat.EditText" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/train_edit_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/train_font_size_small</item>
        <item name="android:paddingHorizontal">10dp</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!-- TODO: Update blank fragment layout -->
    <include
        layout="@layout/layout_issuance_title"
        />

    <RelativeLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/img_public_bg04"
        android:layout_marginVertical="@dimen/common_margin_20"
        android:layout_marginHorizontal="@dimen/common_margin_40"
        >

        <RelativeLayout
            android:id="@+id/num_display"
            android:layout_width="match_parent"
            android:layout_height="@dimen/issuance_notify_title_height"
            android:background="@drawable/img_public_bg03"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/img_public_bg05"
                android:layout_marginHorizontal="@dimen/common_margin_20"
                android:layout_marginVertical="16dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/left_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_size_large2"
                    android:gravity="center"
                    android:hint="******"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_sub2"
                    android:textSize="@dimen/font_size_large2"
                    android:gravity="center"
                    android:hint="-"
                    />

                <TextView
                    android:id="@+id/right_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_size_large2"
                    android:gravity="center"
                    android:hint="*******"
                    />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/common_margin_20"
            android:layout_below="@id/num_display"
            android:gravity="center"
            >

            <GridLayout
                android:id="@+id/gl_keypad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="4"
                android:layout_alignParentRight="true"
                >

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_1"
                    android:layout_width="@dimen/issuance_keypad_width"
                    android:layout_height="@dimen/issuance_keypad_height"
                    android:layout_margin="@dimen/common_margin_4"
                    android:background="@android:color/transparent"
                    android:src="@drawable/hospital_btn_num_01_selector"
                    android:scaleType="centerInside"
                    android:stateListAnimator="@null"
                    android:tag="1" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_2"
                    android:layout_width="@dimen/issuance_keypad_width"
                    android:layout_height="@dimen/issuance_keypad_height"
                    android:layout_margin="@dimen/common_margin_4"
                    android:background="@android:color/transparent"
                    android:src="@drawable/hospital_btn_num_02_selector"
                    android:scaleType="centerInside"
                    android:stateListAnimator="@null"
                    android:tag="2" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_3"
                    android:layout_width="@dimen/issuance_keypad_width"
                    android:layout_height="@dimen/issuance_keypad_height"
                    android:layout_margin="@dimen/common_margin_4"
                    android:background="@android:color/transparent"
                    android:src="@drawable/hospital_btn_num_03_selector"
                    android:scaleType="centerInside"
                    android:stateListAnimator="@null"
                    android:tag="3" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_4"
                    android:layout_width="@dimen/issuance_keypad_width"
                    android:layout_height="@dimen/issuance_keypad_height"
                    android:layout_margin="@dimen/common_margin_4"
                    android:background="@android:color/transparent"
                    android:src="@drawable/hospital_btn_num_04_selector"
                    android:scaleType="centerInside"
                    android:stateListAnimator="@null"
                    android:tag="4" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_5"
                    android:layout_width="@dimen/issuance_keypad_width"
                    android:layout_height="@dimen/issuance_keypad_height"
                    android:layout_margin="@dimen/common_margin_4"
                    android:background="@android:color/transparent"
                    android:src="@drawable/hospital_btn_num_05_selector"
                    android:scaleType="centerInside"
                    android:stateListAnimator="@null"
                    android:tag="5" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_6"
                    android:layout_width="@dimen/issuance_keypad_width"
                    android:layout_height="@dimen/issuance_keypad_height"
                    android:layout_margin="@dimen/common_margin_4"
                    android:background="@android:color/transparent"
                    android:src="@drawable/hospital_btn_num_06_selector"
                    android:scaleType="centerInside"
                    android:stateListAnimator="@null"
                    android:tag="6" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_7"
                    android:layout_width="@dimen/issuance_keypad_width"
                    android:layout_height="@dimen/issuance_keypad_height"
                    android:layout_margin="@dimen/common_margin_4"
                    android:background="@android:color/transparent"
                    android:src="@drawable/hospital_btn_num_07_selector"
                    android:scaleType="centerInside"
                    android:stateListAnimator="@null"
                    android:tag="7" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_8"
                    android:layout_width="@dimen/issuance_keypad_width"
                    android:layout_height="@dimen/issuance_keypad_height"
                    android:layout_margin="@dimen/common_margin_4"
                    android:background="@android:color/transparent"
                    android:src="@drawable/hospital_btn_num_08_selector"
                    android:scaleType="centerInside"
                    android:stateListAnimator="@null"
                    android:tag="8" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_9"
                    android:layout_width="@dimen/issuance_keypad_width"
                    android:layout_height="@dimen/issuance_keypad_height"
                    android:layout_margin="@dimen/common_margin_4"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/hospital_btn_num_09_selector"
                    android:stateListAnimator="@null"
                    android:tag="9" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_clear"
                    android:layout_width="@dimen/issuance_keypad_width"
                    android:layout_height="@dimen/issuance_keypad_height"
                    android:layout_margin="@dimen/common_margin_4"
                    android:background="@android:color/transparent"
                    android:src="@drawable/hospital_btn_num_clear_selector"
                    android:scaleType="centerInside"
                    android:stateListAnimator="@null"
                    android:tag="CLEAR" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_0"
                    android:layout_width="@dimen/issuance_keypad_width"
                    android:layout_height="@dimen/issuance_keypad_height"
                    android:layout_margin="@dimen/common_margin_4"
                    android:background="@android:color/transparent"
                    android:src="@drawable/hospital_btn_num_00_selector"
                    android:scaleType="centerInside"
                    android:stateListAnimator="@null"
                    android:tag="0" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_backspace"
                    android:layout_width="@dimen/issuance_keypad_width"
                    android:layout_height="@dimen/issuance_keypad_height"
                    android:layout_margin="@dimen/common_margin_4"
                    android:background="@android:color/transparent"
                    android:src="@drawable/hospital_btn_num_back_selector"
                    android:scaleType="centerInside"
                    android:stateListAnimator="@null"
                    android:tag="BACKSPACE" />
            </GridLayout>

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/issuance_input_resident_num_explain"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size"
                android:layout_marginRight="@dimen/common_margin_10"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/gl_keypad"
                />

        </RelativeLayout>

    </RelativeLayout>

    <include
        layout="@layout/layout_issuance_bottom"
        android:id="@+id/bottom_btn_layout"
        />

</LinearLayout>
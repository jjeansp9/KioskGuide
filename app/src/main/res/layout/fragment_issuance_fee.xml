<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include
        layout="@layout/layout_issuance_title"
        android:visibility="invisible"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/img_public_bg04"
        android:layout_marginVertical="@dimen/common_margin_20"
        android:layout_marginHorizontal="@dimen/common_margin_40"
        >

        <RelativeLayout
            android:id="@+id/title_ly"
            android:layout_width="match_parent"
            android:layout_height="@dimen/issuance_notify_title_height"
            android:background="@drawable/img_public_bg03"
            >

            <TextView
                android:id="@+id/title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/issuance_put_the_commission"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_large2"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/common_margin_20"
            android:layout_below="@id/title_ly"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="@dimen/common_margin_20"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_money"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/issuance_put_the_commission_msg"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_size"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_textbox10"
                    android:padding="@dimen/common_margin_10"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="신청부수"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/font_size"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        />

                    <TextView
                        android:id="@+id/count_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1부"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/font_size"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/img_textbox10"
                    android:padding="@dimen/common_margin_10"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1부당수수료"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/font_size"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        />

                    <TextView
                        android:id="@+id/fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200원"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/font_size"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/img_textbox10"
                    android:padding="@dimen/common_margin_10"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="총 수수료"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/font_size"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        />

                    <TextView
                        android:id="@+id/total_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0원"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/font_size"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/img_textbox11"
                    android:padding="@dimen/common_margin_10"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="현재금액"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/font_size"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        />

                    <TextView
                        android:id="@+id/current_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="원"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/font_size"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>


            </LinearLayout>



        </LinearLayout>


    </RelativeLayout>

    <include
        layout="@layout/layout_issuance_bottom"
        android:id="@+id/bottom_btn_layout"
        />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fastfood_layout_footer"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/btn_back"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/fastfood_bg_btn_cancel"
        android:gravity="center">

        <TextView
            android:id="@+id/btn_back_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_large2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/fastfood_bg_btn_ok"
        android:gravity="center">

        <TextView
            android:id="@+id/btn_next_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_next"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_large2" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/footer_left_ly"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:layout_weight="1"
        android:background="@color/train_bg_color1"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/footer_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/train_font_main_title"
            android:text="@string/back"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/footer_right_ly"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:layout_weight="1"
        android:background="@color/train_bg_color3"
        >

        <TextView
            android:id="@+id/footer_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/train_font_main_title"
            android:text="@string/ok"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

</LinearLayout>
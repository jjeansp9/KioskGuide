<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hospital.fragments.ReceiptSubSelectTypeFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />
    <!-- 번호표 발행 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_ticket"
        android:layout_width="0dp"
        android:layout_height="@dimen/hospital_receipt_content_btn_size"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/hospital_main_color"
        android:clickable="true"
        android:layout_marginVertical="@dimen/common_margin_10"
        android:layout_marginHorizontal="@dimen/common_margin_60"
        app:cardCornerRadius="@dimen/default_corner_radius"
        app:cardElevation="@dimen/default_card_elevation"
        app:contentPadding="@dimen/common_margin_10"
        app:layout_constraintBottom_toTopOf="@id/guideline_h"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_30"
            android:text="@string/hospital_sub_receipt_ticket"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_large3"
            android:layout_gravity="top|center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_20"
            android:text="@string/hospital_sub_receipt_ticket_description"
            android:textColor="@color/hospital_sub_color"
            android:textSize="@dimen/font_size_large2"
            android:layout_gravity="center" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_identify"
        android:layout_width="0dp"
        android:layout_height="@dimen/hospital_receipt_content_btn_size"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/hospital_main_color"
        android:clickable="true"
        android:layout_marginVertical="@dimen/common_margin_10"
        android:layout_marginHorizontal="@dimen/common_margin_60"
        app:cardCornerRadius="@dimen/default_corner_radius"
        app:cardElevation="@dimen/default_card_elevation"
        app:contentPadding="@dimen/common_margin_10"
        app:layout_constraintTop_toBottomOf="@id/guideline_h"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_30"
            android:text="@string/hospital_sub_receipt_identify"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_large3"
            android:layout_gravity="top|center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_20"
            android:text="@string/hospital_sub_receipt_identify_description"
            android:textColor="@color/hospital_sub_color"
            android:textSize="@dimen/font_size_large2"
            android:layout_gravity="center" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/common_margin_20">

    <ImageButton
        android:id="@+id/btn_home"
        android:layout_width="@dimen/header_home_btn_size"
        android:layout_height="@dimen/header_home_btn_size"
        android:background="@drawable/bt_home"
        />

    <android.widget.Button
        android:id="@+id/btn_back_main"
        android:layout_width="@dimen/header_text_btn_width"
        android:layout_height="@dimen/header_home_btn_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_main_selector"
        android:text="@string/finish"
        android:textColor="@color/white"
        android:textSize="@dimen/layout_margin"
        android:textStyle="bold" />

</RelativeLayout>
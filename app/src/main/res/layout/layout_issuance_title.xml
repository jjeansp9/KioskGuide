<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/common_margin_20"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/img_speak"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            >

            <com.avad.humancare.kiosk.view.OutlineTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="발급을 원하시는 "
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_large"
                android:bufferType="spannable"
                app:textStroke="true"
                app:textStrokeWidth="4.0"
                app:textStrokeColor="@color/white"
                />

            <com.avad.humancare.kiosk.view.OutlineTextView
                android:id="@+id/sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:bufferType="spannable"
                android:text="개인정보 보호법에 의거하여 현재"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size"
                app:textStroke="true"
                app:textStrokeWidth="4.0"
                app:textStrokeColor="@color/white"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
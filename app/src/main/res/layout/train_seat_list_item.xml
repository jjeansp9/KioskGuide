<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/train_seat_size"
        android:padding="12dp">

        <RelativeLayout
            android:id="@+id/seat_ly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/img_seat01"
            >

            <TextView
                android:id="@+id/seat_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="A"
                android:textColor="@color/black"
                android:textSize="@dimen/train_font_size"
                android:gravity="center"
                />

        </RelativeLayout>

        <ImageView
            android:id="@+id/direction_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_direction"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />

    </RelativeLayout>

</RelativeLayout>
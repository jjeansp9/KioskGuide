<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D4E5E4"
    android:paddingHorizontal="@dimen/common_margin_20"
    android:paddingTop="@dimen/common_margin_20"
    android:paddingBottom="@dimen/common_margin_10">

    <ImageButton
        android:id="@+id/btn_home"
        android:layout_width="@dimen/header_home_btn_size"
        android:layout_height="@dimen/header_home_btn_size"
        android:background="@drawable/bt_home"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <android.widget.Button
        android:id="@+id/btn_finish"
        android:layout_width="@dimen/header_text_btn_width"
        android:layout_height="@dimen/header_home_btn_size"
        android:background="@drawable/btn_main_selector"
        android:text="@string/finish"
        android:textColor="@color/white"
        android:textSize="@dimen/layout_margin"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <android.widget.Button
        android:id="@+id/btn_back_main"
        android:layout_width="@dimen/header_text_btn_width"
        android:layout_height="@dimen/header_home_btn_size"
        android:background="@drawable/btn_main_selector"
        android:text="@string/back_main"
        android:textColor="@color/white"
        android:textSize="@dimen/layout_margin"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
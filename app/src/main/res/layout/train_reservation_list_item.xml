<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/train_layout_margin"
        >

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2022"
            android:textColor="@color/black"
            android:textSize="@dimen/train_font_size"
            />

        <TextView
            android:id="@+id/train_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2022"
            android:textColor="@color/black"
            android:textSize="@dimen/train_font_size"
            android:layout_marginTop="4dp"
            />

        <TextView
            android:id="@+id/seat_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00A"
            android:textColor="@color/black"
            android:textSize="@dimen/train_font_size"
            android:layout_marginTop="4dp"
            />

        <TextView
            android:id="@+id/reservation_state_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/train_search_waiting_reservation"
            android:textColor="@color/train_font_color_red"
            android:textSize="@dimen/train_font_size"
            android:layout_marginTop="4dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/train_button_round_bg1"
            android:text="@string/train_ticket_reservation_cancel"
            android:textSize="@dimen/train_font_size"
            android:textColor="@color/black"
            android:paddingVertical="10dp"
            android:layout_marginHorizontal="20dp"
            />

    </LinearLayout>

    <View style="@style/TrainBorderStyle" />

</LinearLayout>
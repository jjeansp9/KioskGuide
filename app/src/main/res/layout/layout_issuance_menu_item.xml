<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/common_margin_8"
    android:gravity="center_horizontal"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/img_textbox12"
        android:text="주민등록"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size"
        android:paddingHorizontal="@dimen/common_margin_10"
        android:paddingVertical="16dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/sub_title"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/img_textbox13"
        android:text="200원"
        android:textColor="@color/issuance_font_color_yellow"
        android:textSize="@dimen/font_size_small"
        android:paddingHorizontal="@dimen/common_margin_10"
        android:paddingVertical="4dp"
        android:gravity="right"
        />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_ktx_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="16dp"
        >

        <LinearLayout
            android:id="@+id/btn_title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/train_main_round_bg1"
            android:padding="@dimen/train_main_image_margin"
            >

            <ImageView
                android:layout_width="@dimen/train_main_image_size"
                android:layout_height="@dimen/train_main_image_size"
                android:background="@drawable/bt_main01" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/train_main_title1"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"
                android:textSize="@dimen/train_font_main_title" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/train_main_round_bg2"
            android:layout_marginVertical="20dp"
            android:padding="@dimen/train_main_image_margin"
            >

            <ImageView
                android:layout_width="@dimen/train_main_image_size"
                android:layout_height="@dimen/train_main_image_size"
                android:background="@drawable/bt_main02"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/train_main_title2"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"
                android:textSize="@dimen/train_font_main_title"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_title3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/train_main_round_bg3"
            android:padding="@dimen/train_main_image_margin"
            >

            <ImageView
                android:layout_width="@dimen/train_main_image_size"
                android:layout_height="@dimen/train_main_image_size"
                android:background="@drawable/bt_main03" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/train_main_title3"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"
                android:textSize="@dimen/train_font_main_title"
                />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/header_home_button_layout"/>

</RelativeLayout>
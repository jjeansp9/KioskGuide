<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/common_margin_4">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v_60"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.6"
        android:orientation="vertical" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v_70"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.70"
        android:orientation="vertical" />
    <CheckBox
        android:id="@+id/cb_select"
        android:layout_width="@dimen/hospital_common_checkbox_size_small"
        android:layout_height="@dimen/hospital_common_checkbox_size_small"
        android:layout_gravity="center_vertical"
        android:clickable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_date"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="21.09.29 - 21.12.30"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size"
        android:layout_gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/cb_select"
        app:layout_constraintEnd_toStartOf="@id/guideline_v_60"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="@string/hospital_sub_record_diagnosis_type_outpatient"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size"
        android:layout_gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/guideline_v_60"
        app:layout_constraintEnd_toStartOf="@id/guideline_v_70"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/tv_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="이비인후과"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size"
        android:layout_gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/guideline_v_70"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>